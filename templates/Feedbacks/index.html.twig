{% extends 'base.html.twig' %}

{% block title %}Feedbacks{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-primary mb-0"><i class="fas fa-comments me-2"></i>Feedbacks</h1>
        <a href="{{ path('Feedbacks_new') }}" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Create a new feedback
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="border-0">ID</th>
                            <th class="border-0">Name</th>
                            <th class="border-0">Email</th>
                            <th class="border-0">Feedback</th>
                            <th class="border-0">Sending date</th>
                            <th class="border-0 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for feedback in Feedbackss %}
                        <tr>
                            <td class="fw-bold text-primary">{{ feedback.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-primary text-white me-2">
                                        {{ feedback.name|first|upper }}
                                    </div>
                                    {{ feedback.name }}
                                </div>
                            </td>
                            <td>
                                <a href="mailto:{{ feedback.email }}" class="text-decoration-none">
                                    <i class="fas fa-envelope me-1 text-muted"></i>{{ feedback.email }}
                                </a>
                            </td>
                            <td>
                                <div class="feedback-text">
                                    {{ feedback.Feedbacks|length > 50 ? feedback.Feedbacks|slice(0, 50) ~ '...' : feedback.Feedbacks }}
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="fas fa-calendar me-1"></i>{{ feedback.sentAt ? feedback.sentAt|date('d/m/Y H:i') : 'N/A' }}
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('Feedbacks_edit', {'id': feedback.id}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('Feedbacks/_delete_form.html.twig', {'feedback': feedback}) }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No feedback found</h5>
                                    <p class="text-muted">Be the first to share your opinion!</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
}
.table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
}
.avatar-circle {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.9rem;
}
.feedback-text {
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.btn-outline-warning:hover {
    background-color: #ffc107;
    border-color: #ffc107;
}
.btn-danger {
    border-radius: 6px;
}
.empty-state {
    padding: 2rem 0;
}
.btn-primary {
    background-color: #0d6efd;
    border-color: #0d6efd;
    border-radius: 0.375rem;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
}

.btn-primary:hover {
    background-color: #0b5ed7;
    border-color: #0a58ca;
}
</style>
{% endblock %}
