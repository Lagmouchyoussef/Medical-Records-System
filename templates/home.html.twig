{% extends 'base.html.twig' %}

{% block title %}Home - Medical Records System{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-hospital me-3"></i>Medical Management
                </h1>
                <p class="lead mb-4">
                    A complete platform for managing patients, feedbacks and medical communications.
                    Simplify your medical workflow with our intuitive tools.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a class="btn btn-light btn-lg" href="{{ path('patient_index') }}">
                        <i class="fas fa-users me-2"></i>Manage patients
                    </a>
                    <a class="btn btn-outline-light btn-lg" href="{{ path('contact') }}">
                        <i class="fas fa-envelope me-2"></i>Contact Us
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-user-md display-1 text-info opacity-75"></i>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="h1 fw-bold text-primary mb-4">Our Services</h2>
                <p class="lead text-muted">Discover all the features of our medical platform</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-primary text-white mb-3">
                        <i class="fas fa-user-injured fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Patient Management</h5>
                    <p class="text-muted">Register and track all your patients with complete information and detailed medical history.</p>
                    <a href="{{ path('patient_index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-1"></i>View patients
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-success text-white mb-3">
                        <i class="fas fa-comments fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Feedbacks & Reviews</h5>
                    <p class="text-muted">Collect and manage your patients' feedback to continuously improve your services.</p>
                    <a href="{{ path('Feedbacks_index') }}" class="btn btn-success">
                        <i class="fas fa-arrow-right me-1"></i>View feedbacks
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-info text-white mb-3">
                        <i class="fas fa-envelope fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Messaging</h5>
                    <p class="text-muted">Communicate effectively with your patients and colleagues thanks to our integrated messaging system.</p>
                    <a href="{{ path('message_index') }}" class="btn btn-info">
                        <i class="fas fa-arrow-right me-1"></i>View messages
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="h1 fw-bold mb-4">Ready to start?</h2>
        <p class="lead mb-4">Join our platform and improve the management of your medical office today.</p>
        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a href="{{ path('patient_new') }}" class="btn btn-light btn-lg">
                <i class="fas fa-plus me-2"></i>Add a patient
            </a>
            <a href="{{ path('Feedbacks_new') }}" class="btn btn-outline-light btn-lg">
                <i class="fas fa-star me-2"></i>Give feedback
            </a>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.bg-gradient-primary {
    background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
}

.hero-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
}

.feature-card {
    padding: 2rem;
    border-radius: 15px;
    background: white;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #e9ecef;
    text-align: center;
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.feature-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}


.btn {
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}

@media (max-width: 768px) {
    .hero-section {
        text-align: center;
        padding: 3rem 0;
    }

    .display-4 {
        font-size: 2.5rem;
    }

    .feature-card {
        margin-bottom: 2rem;
    }

}
</style>
{% endblock %}
