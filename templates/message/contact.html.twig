{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
<!-- Header Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-primary mb-4">
                    <i class="fas fa-envelope me-3"></i>Contact Us
                </h1>
                <p class="lead mb-4">
                    We are here to help you. Send us a message and we will respond as soon as possible.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-phone text-success me-3 fs-4"></i>
                        <div>
                            <strong>Phone</strong><br>
                            <span>+212 6XX XXX XXX</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-envelope text-success me-3 fs-4"></i>
                        <div>
                            <strong>Email</strong><br>
                            <span>contact@examphp.com</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-comments display-1 text-primary opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<!-- Contact Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-white">
                        <h2 class="h3 mb-0 text-center text-primary">
                            <i class="fas fa-paper-plane me-2"></i>Send us a message
                        </h2>
                    </div>
                    <div class="card-body">
                        {% for flash_message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>{{ flash_message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'contact-form'}}) }}
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Your full name'}}) }}
                                        <label for="{{ form.name.vars.id }}" class="form-label">
                                            <i class="fas fa-user me-2"></i>Full name
                                        </label>
                                        {% if form.name.vars.errors|length > 0 %}
                                            <div class="text-danger small mt-1">
                                                {{ form_errors(form.name) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'your.email@example.com'}}) }}
                                        <label for="{{ form.email.vars.id }}" class="form-label">
                                            <i class="fas fa-envelope me-2"></i>Email address
                                        </label>
                                        {% if form.email.vars.errors|length > 0 %}
                                            <div class="text-danger small mt-1">
                                                {{ form_errors(form.email) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.message, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Write your message here...', 'rows': 6, 'style': 'min-height: 120px'}}) }}
                                        <label for="{{ form.message.vars.id }}" class="form-label">
                                            <i class="fas fa-comment-dots me-2"></i>Your message
                                        </label>
                                        {% if form.message.vars.errors|length > 0 %}
                                            <div class="text-danger small mt-1">
                                                {{ form_errors(form.message) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Send the message
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Messages Table Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h2 class="h4 mb-0">
                            <i class="fas fa-envelope me-2"></i>Received Messages
                        </h2>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-info">
                                    <tr>
                                        <th class="border-0">ID</th>
                                        <th class="border-0">Sender</th>
                                        <th class="border-0">Email</th>
                                        <th class="border-0">Message</th>
                                        <th class="border-0">Date Sent</th>
                                        <th class="border-0 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for message in messages %}
                                    <tr>
                                        <td class="fw-bold text-info">{{ message.id }}</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-info text-white me-2">
                                                    {{ message.name|first|upper }}
                                                </div>
                                                {{ message.name }}
                                            </div>
                                        </td>
                                        <td>
                                            <a href="mailto:{{ message.email }}" class="text-decoration-none">
                                                <i class="fas fa-envelope me-1 text-muted"></i>{{ message.email }}
                                            </a>
                                        </td>
                                        <td>
                                            <div class="message-text">
                                                {{ message.message|length > 50 ? message.message|slice(0, 50) ~ '...' : message.message }}
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">
                                                <i class="fas fa-calendar me-1"></i>{{ message.sentAt ? message.sentAt|date('d/m/Y H:i') : 'N/A' }}
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('message_edit', {'id': message.id}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                {{ include('message/_delete_form.html.twig', {'message': message}) }}
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="fas fa-envelope fa-3x text-muted mb-3"></i>
                                                <h5 class="text-muted">No messages received</h5>
                                                <p class="text-muted">Messages will appear here once received.</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-card h-100">
                    <i class="fas fa-clock text-info fs-1 mb-3"></i>
                    <h5 class="fw-bold">Quick response</h5>
                    <p class="text-muted">We respond to all messages within 24 hours.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card h-100">
                    <i class="fas fa-shield-alt text-success fs-1 mb-3"></i>
                    <h5 class="fw-bold">Secure</h5>
                    <p class="text-muted">Your information is protected and confidential.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card h-100">
                    <i class="fas fa-users text-warning fs-1 mb-3"></i>
                    <h5 class="fw-bold">Personalized support</h5>
                    <p class="text-muted">A dedicated team to meet your specific needs.</p>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.card {
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.form-floating > label {
    padding: 1rem 0.75rem;
    font-weight: 500;
    color: #6c757d;
}

.form-control {
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
}

.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.btn-primary {
    background-color: #0d6efd;
    border-color: #0d6efd;
    border-radius: 0.375rem;
    padding: 0.75rem 2rem;
    font-weight: 500;
}

.btn-primary:hover {
    background-color: #0b5ed7;
    border-color: #0a58ca;
}

.feature-card {
    padding: 2rem;
    border-radius: 0.375rem;
    background: white;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    transition: transform 0.2s ease;
    border: 1px solid #dee2e6;
}

.feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
}

.alert-success {
    border-radius: 0.375rem;
    border: 1px solid #198754;
    background-color: #d1edff;
    color: #0c63e4;
}

.avatar-circle {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.9rem;
}

.message-text {
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.btn-outline-warning:hover {
    background-color: #ffc107;
    border-color: #ffc107;
}

.btn-danger {
    border-radius: 6px;
}

.table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
}

@media (max-width: 768px) {
    .display-4 {
        font-size: 2.5rem;
    }

    .feature-card {
        margin-bottom: 2rem;
    }
}
</style>
{% endblock %}
