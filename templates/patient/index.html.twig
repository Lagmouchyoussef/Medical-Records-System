{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-success mb-0"><i class="fas fa-users me-2"></i>Patients</h1>
        <a href="{{ path('patient_new') }}" class="btn btn-success btn-lg">
            <i class="fas fa-plus me-2"></i>Create a new patient
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-success">
                        <tr>
                            <th class="border-0">ID</th>
                            <th class="border-0">Patient</th>
                            <th class="border-0">Illness</th>
                            <th class="border-0">Doctor</th>
                            <th class="border-0">Next visit</th>
                            <th class="border-0 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for patient in patients %}
                        <tr>
                            <td class="fw-bold text-success">{{ patient.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-success text-white me-2">
                                        {{ patient.name|first|upper }}
                                    </div>
                                    <div>
                                        <div class="fw-bold">{{ patient.name }}</div>
                                        <small class="text-muted">ID: {{ patient.id }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-danger">{{ patient.illness }}</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-md text-primary me-2"></i>
                                    <span>{{ patient.assignedDoctor }}</span>
                                </div>
                            </td>
                            <td>
                                {% if patient.visitDate %}
                                    <span class="badge bg-info">
                                        <i class="fas fa-calendar me-1"></i>{{ patient.visitDate|date('d/m/Y H:i') }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">Not scheduled</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('patient_edit', {'id': patient.id}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('patient/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No patients registered</h5>
                                    <p class="text-muted">Start by adding your first patient!</p>
                                    <a href="{{ path('patient_new') }}" class="btn btn-success">
                                        <i class="fas fa-plus me-2"></i>Add a patient
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% if patients is defined and patients|length > 0 %}
    <div class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-users fa-2x me-3"></i>
                            <div>
                                <h5 class="card-title mb-0">{{ patients|length }}</h5>
                                <small>Patients registered</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-check fa-2x me-3"></i>
                            <div>
                                <h5 class="card-title mb-0">
                                    {{ patients|filter(p => p.visitDate)|length }}
                                </h5>
                                <small>Appointments scheduled</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
}

.table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
}

.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1rem;
}

.btn-outline-warning:hover {
    background-color: #ffc107;
    border-color: #ffc107;
}

.btn-danger {
    border-radius: 6px;
}

.empty-state {
    padding: 2rem 0;
}

.btn-success {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border: none;
    border-radius: 8px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
}

.card.bg-success, .card.bg-info {
    border-radius: 10px;
}

.badge {
    font-size: 0.75rem;
}
</style>
{% endblock %}
